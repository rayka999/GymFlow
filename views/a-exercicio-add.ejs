<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Novo Exercício</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/aluno.css">
</head>

<body class="bg-light">
<div class="container py-4">
    <div class="card shadow">
        <div class="card-body">

            <h3 class="mb-4 text-center">Cadastrar Novo Exercício</h3>

            <form action="/usuario/opcoes/exercicio/add" method="POST" class="row g-3">

                <div class="col-md-6">
                    <label class="form-label">Categoria</label>

                    <select class="form-select"
                            name="categoria"
                            onchange="window.location='?categoria=' + this.value">
                            <option>Selecione...</option>
                        <% categorias.forEach(c => { %>
                            <option value="<%= c.id_categoria %>"
                                <%= c.id_categoria == categoriaSelecionada ? 'selected' : '' %>>
                                <%= c.nome %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Músculo</label>

                    <select name="id_musculo" class="form-select" <%= musculos.length === 0 ? 'disabled' : '' %>>
                        <% if (musculos.length === 0) { %>
                            <option>Selecione uma categoria primeiro...</option>
                        <% } else { %>
                            <% musculos.forEach(m => { %>
                                <option value="<%= m.id_musculo %>"><%= m.nome %></option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Nome</label>
                    <input type="text" name="nome" class="form-control" required>
                </div>

                <div class="col-md-6">
                    <label class="form-label">URL da mídia</label>
                    <input type="text" name="url" class="form-control">
                </div>

                <div class="col-md-4">
                    <label class="form-label">Tipo de mídia</label>
                    <select name="tipo_midia" class="form-select">
                        <option value="1">Vídeo</option>
                        <option value="2">Imagem</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Séries</label>
                    <input type="number" name="serie_padrao" class="form-control" placeholder="Digite o número de séries padrão">
                </div>

                <div class="col-md-4">
                    <label class="form-label">Repetições</label>
                    <input type="number" name="repeticoes_padrao" class="form-control" placeholder="Digite o número de repetições padrão">
                </div>

                <div class="col-md-12">
                    <label class="form-label">Descanso (segundos)</label>
                    <input type="number" name="descanso_padrao" class="form-control" placeholder="Digite o tempo estimado de descanso">
                </div>

                <div class="col-12">
                    <label class="form-label">Descrição</label>
                    <textarea name="descricao" class="form-control"></textarea>
                </div>

                <div class="col-12 text-center">
                    <button class="btn btn-gymflow px-4">Salvar</button>
                </div>
            </form>

        </div>
    </div>
</div>


<nav class="bottom-nav py-2" style="z-index: 2;">
    <div class="container">
        <div class="row text-center">

            <div class="col">
                <a href="/usuario/inicio">
                    <i class="bi bi-house icon-big"></i><br>
                    Início
                </a>
            </div>

            <div class="col">
                <a href="/usuario/opcoes">
                    <i class="bi bi-grid-3x3-gap icon-big"></i><br>
                    Opções
                </a>
            </div>

            <div class="col">
                <a href="/usuario/estatisticas">
                    <i class="bi bi-arrow-up-right icon-big"></i><br>
                    Estatísticas
                </a>
            </div>

            <div class="col">
                <a href="/usuario/conta">
                    <i class="bi bi-person icon-big"></i><br>
                    Conta
                </a>
            </div>

        </div>
    </div>
</nav>

</body>
</html>