<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Meus Treinos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/aluno.css">
</head>
<body class="bg-light">

<div class="container mt-4">

    <h3 class="mb-4">Meus Treinos</h3>

    <div class="mb-5">
        <h5 class="mb-3 text-danger">Treinos Públicos</h5>

        <% if (treinosPublicos.length === 0) { %>
            <p class="text-muted">Você ainda não criou treinos públicos.</p>
        <% } else { %>
            <div class="row g-3">
                <% treinosPublicos.forEach(treino => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title"><%= treino.nome %></h6>
                                <p class="card-text text-muted small">
                                    <%= treino.descricao %>
                                </p>
                            </div>

                            <div class="card-footer bg-white border-0">
                                <a href="/aluno/treino/<%= treino.id_treino %>/exercicios"
                                   class="btn btn-gymflow w-100">
                                    Abrir Treino
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <div>
        <h5 class="mb-3 text-secondary">Treinos Personalizados</h5>

        <% if (treinosPrivados.length === 0) { %>
            <p class="text-muted">Você ainda não criou treinos personalizados.</p>
        <% } else { %>
            <div class="row g-3">
                <% treinosPrivados.forEach(treino => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-secondary">
                            <div class="card-body">
                                <h6 class="card-title"><%= treino.nome %></h6>
                                <p class="card-text text-muted small">
                                    <%= treino.descricao %>
                                </p>
                            </div>

                            <div class="card-footer bg-white border-0">
                                <a href="/aluno/treino/<%= treino.id_treino %>/exercicios"
                                   class="btn btn-outline-secondary w-100">
                                    Abrir Treino
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

</div>

</body>
</html>