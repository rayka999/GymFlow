<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Meus Treinos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/aluno.css">
</head>

<body class="bg-light">

<div class="container mt-4 mb-5">

    <h3 class="mb-4 fw-bold">Meus Treinos</h3>

    <section class="mb-5">
        <h5 class="mb-3 text-danger">
            <i class="bi bi-globe"></i> Treinos Públicos
        </h5>

        <% if (treinosPublicos.length === 0) { %>
            <p class="text-muted">Nenhum treino público disponível.</p>
        <% } else { %>
            <div class="row g-3">
                <% treinosPublicos.forEach(treino => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title"><%= treino.nome %></h6>
                                <p class="card-text text-muted small">
                                    <%= treino.descricao || 'Sem descrição.' %>
                                </p>
                            </div>

                            <div class="card-footer bg-white border-0 d-flex gap-2">
                                <a href="/usuario/treino/<%= treino.id_treino %>/exercicios"
                                   class="btn btn-dark flex-fill">
                                    Abrir
                                </a>

                                <form action="/usuario/treino/<%= treino.id_treino %>/excluir"
                                      method="POST"
                                      onsubmit="return confirm('Deseja excluir este treino?')">
                                    <button class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </section>

    <section class="mb-5">
        <h5 class="mb-3 text-secondary">
            <i class="bi bi-person"></i> Meus Treinos
        </h5>

        <% if (treinosAluno.length === 0) { %>
            <p class="text-muted">Você ainda não criou treinos personalizados.</p>
        <% } else { %>
            <div class="row g-3">
                <% treinosAluno.forEach(treino => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-secondary">
                            <div class="card-body">
                                <h6 class="card-title"><%= treino.nome %></h6>

                                <p class="small text-primary mb-1">
                                    <i class="bi bi-calendar-week"></i>
                                    <strong><%= treino.dia_semana %></strong>
                                </p>

                                <p class="card-text text-muted small">
                                    <%= treino.descricao || 'Sem descrição.' %>
                                </p>
                            </div>

                            <div class="card-footer bg-white border-0 d-grid gap-2">
                                <a href="/usuario/treino/<%= treino.id_treino %>/exercicios"
                                   class="btn btn-outline-secondary">
                                    Abrir
                                </a>

                                <form action="/usuario/treino/<%= treino.id_treino %>/concluir" method="POST">
                                    <button class="btn btn-success">
                                        <i class="bi bi-check-circle"></i>
                                        Concluir
                                    </button>
                                </form>

                                <form action="/usuario/treino/<%= treino.id_treino %>/excluir"
                                      method="POST"
                                      onsubmit="return confirm('Deseja excluir este treino?')">
                                    <button class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                        Excluir
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </section>
    <section>
        <h5 class="mb-3 text-danger">
            <i class="bi bi-award"></i> Treinos do Instrutor
        </h5>

        <% if (treinosInstrutor.length === 0) { %>
            <p class="text-muted">Nenhum treino atribuído pelo instrutor.</p>
        <% } else { %>
            <div class="row g-3">
                <% treinosInstrutor.forEach(treino => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-danger">
                            <div class="card-body">
                                <h6 class="card-title"><%= treino.nome %></h6>

                                <p class="small text-danger mb-1">
                                    <i class="bi bi-calendar-check"></i>
                                    <strong><%= treino.dia_semana %></strong>
                                </p>

                                <p class="card-text text-muted small">
                                    <%= treino.descricao || 'Sem descrição.' %>
                                </p>
                            </div>

                            <div class="card-footer bg-white border-0 d-grid gap-2">
                                <a href="/usuario/treino/<%= treino.id_treino %>/exercicios"
                                   class="btn btn-danger">
                                    Abrir
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </section>

</div>
<nav class="bottom-nav py-2">
    <div class="container">
        <div class="row text-center">

            <div class="col">
                <a href="/usuario/inicio" class="active">
                    <i class="bi bi-house icon-big"></i><br>
                    Início
                </a>
            </div>

            <div class="col">
                <a href="/usuario/opcoes">
                    <i class="bi bi-grid-3x3-gap icon-big"></i><br>
                    Opções
                </a>
            </div>

            <div class="col">
                <a href="/usuario/estatisticas">
                    <i class="bi bi-arrow-up-right icon-big"></i><br>
                    Estatísticas
                </a>
            </div>

            <div class="col">
                <a href="/usuario/conta">
                    <i class="bi bi-person icon-big"></i><br>
                    Conta
                </a>
            </div>

        </div>
    </div>
</nav>

</body>
</html>