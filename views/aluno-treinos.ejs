<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Meus Treinos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/aluno.css">
</head>
<body class="bg-light">

<div class="container mt-4">

    <h3 class="mb-4">Meus Treinos</h3>

    <div class="mb-5">
        <h5 class="mb-3 text-danger">Treinos Públicos</h5>

        <% if (treinosPublicos.length === 0) { %>
            <p class="text-muted">Você ainda não criou treinos públicos.</p>
        <% } else { %>
            <div class="row g-3">
                <% treinosPublicos.forEach(treino => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title"><%= treino.nome %></h6>
                                <p class="card-text text-muted small">
                                    <%= treino.descricao %>
                                </p>
                            </div>

                            <div class="card-footer bg-white border-0 d-flex gap-2">
                                <a href="/usuario/treino/<%= treino.id_treino %>/exercicios"
                                   class="btn btn-gymflow flex-fill">
                                    Abrir Treino
                                </a>
                            
                                <form action="/usuario/treino/<%= treino.id_treino %>/excluir" method="POST"
                                      onsubmit="return confirm('Tem certeza que deseja excluir este treino?')">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                            
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <div>
        <h5 class="mb-3 text-secondary">Treinos Personalizados</h5>

        <% if (treinosPrivados.length === 0) { %>
            <p class="text-muted">Você ainda não criou treinos personalizados.</p>
        <% } else { %>
            <div class="row g-3">
                <% treinosPrivados.forEach(treino => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-secondary">
                            <div class="card-body">
                                <h6 class="card-title"><%= treino.nome %></h6>
                            
                                <p class="text-primary small mb-1">
                                    <i class="bi bi-calendar-week"></i>
                                    <strong><%= treino.dia_semana %></strong>
                                </p>
                            
                                <p class="card-text text-muted small">
                                    <%= treino.descricao %>
                                </p>
                            </div>
                            

                            <div class="card-footer bg-white border-0 d-flex flex-column gap-2">

                                <a href="/usuario/treino/<%= treino.id_treino %>/exercicios"
                                   class="btn btn-outline-secondary w-100">
                                    Abrir Treino
                                </a>
                            
                                <form action="/usuario/treino/<%= treino.id_treino %>/concluir" method="POST">
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-check-circle"></i>
                                        Marcar como concluído
                                    </button>
                                </form>
                            
                                <form action="/usuario/treino/<%= treino.id_treino %>/excluir" method="POST"
                                      onsubmit="return confirm('Tem certeza que deseja excluir este treino?')">
                                    <button type="submit" class="btn btn-outline-danger w-100">
                                        <i class="bi bi-trash"></i>
                                        Excluir
                                    </button>
                                </form>
                            
                            </div>
                            
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<nav class="bottom-nav py-2">
    <div class="container">
        <div class="row text-center">

            <div class="col">
                <a href="/usuario/inicio" class="active">
                    <i class="bi bi-house icon-big"></i><br>
                    Início
                </a>
            </div>

            <div class="col">
                <a href="/usuario/opcoes">
                    <i class="bi bi-grid-3x3-gap icon-big"></i><br>
                    Opções
                </a>
            </div>

            <div class="col">
                <a href="/usuario/estatisticas">
                    <i class="bi bi-arrow-up-right icon-big"></i><br>
                    Estatísticas
                </a>
            </div>

            <div class="col">
                <a href="/usuario/conta">
                    <i class="bi bi-person icon-big"></i><br>
                    Conta
                </a>
            </div>

        </div>
    </div>
</nav>

</body>
</html>