<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Músculos</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .ex-card {
            transition: .2s;
            cursor: pointer;
        }
        .ex-card:hover {
            transform: scale(1.03);
            background-color: #f8f9fa;
        }
    </style>
</head>
<body class="bg-light">

<div class="container py-4">

    <h2 class="text-center mb-4">Músculos</h2>

    <% Object.keys(dados).forEach(id => { %>

        <div class="mb-4 p-3 bg-white rounded shadow-sm">
            <h4 class="mb-3"><%= dados[id].nome %></h4>

            <% if (dados[id].exercicios.length === 0) { %>
                <p class="text-muted">Nenhum exercício cadastrado.</p>
            <% } else { %>

                <div class="list-group">
                    <% dados[id].exercicios.forEach(ex => { %>
                        <a href="/categoria/exercicio/<%= ex.id %>" 
                           class="list-group-item list-group-item-action ex-card">
                            <%= ex.nome %>
                        </a>
                    <% }); %>
                </div>

            <% } %>
        </div>

    <% }); %>

</div>

</body>
</html>
