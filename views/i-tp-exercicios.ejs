<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title><%= treino.nome %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/aluno.css">
</head>

<body class="bg-light">

<div class="container py-4">
    <div class="mb-4">
        <h3 class="fw-bold"><%= treino.nome %></h3>
        <p class="text-muted"><%= treino.descricao %></p>

        <a href="/instrutor/alunos" class="btn btn-outline-secondary btn-sm">
            ← Voltar para meus alunos
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            Adicionar exercício
        </div>

        <div class="card-body">
            <form action="/instrutor/treino/exercicio/add" method="POST">

                <input type="hidden" name="id_treino" value="<%= treino.id_treino %>">

                <div class="row g-3">
                    <div class="col-md-8">
                        <label class="form-label">Exercício</label>
                        <select name="id_exercicio" class="form-select" required>
                            <% exercicios.forEach(ex => { %>
                                <option value="<%= ex.id_exercicio %>">
                                    <%= ex.nome %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                </div>

                <button class="btn btn-danger w-100 mt-3">
                    Adicionar exercício
                </button>

            </form>
        </div>
    </div>
    <br><br>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            Exercícios do treino
        </div>
    
        <% if (exerciciosTreino.length === 0) { %>
            <div class="card-body">
                <p class="text-muted mb-0">
                    Nenhum exercício adicionado ainda.
                </p>
            </div>
        <% } else { %>
            <ul class="list-group list-group-flush">
                <% exerciciosTreino.forEach((ex, index) => { %>
                    <li class="list-group-item">
    
                        <div class="d-flex justify-content-between align-items-center flex-wrap">
    
                            <div>
                                <strong>
                                    <%= index + 1 %>. <%= ex.nome %>
                                </strong>
                                <div class="text-muted small">
                                    <%= ex.serie_sugerida %> séries •
                                    <%= ex.repeticoes_sugerida %> repetições •
                                    descanso <%= ex.descanso_sugerido %>s
                                </div>
                            </div>
    
                            <div class="mt-2 mt-md-0">
                                <a href="/instrutor/treino/exercicio/<%= ex.id_treino_exercicio %>/up"
                                   class="btn btn-sm btn-outline-secondary">
                                    ↑
                                </a>
    
                                <a href="/instrutor/treino/exercicio/<%= ex.id_treino_exercicio %>/down"
                                   class="btn btn-sm btn-outline-secondary">
                                    ↓
                                </a>
    
                                <form action="/instrutor/treino/exercicio/<%= ex.id_treino_exercicio %>/delete"
                                      method="POST"
                                      class="d-inline">
                                    <button class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Remover exercício?')">
                                        ✕
                                    </button>
                                </form>
                            </div>
    
                        </div>
    
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>
</div>

</body>
</html>
