<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Início</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/aluno.css">
</head>
<body>

<div class="container py-4 mb-5">

    <h4 class="mb-3">
        Olá, <strong><%= usuario ? usuario.nome.split(' ')[0] : 'Aluno' %></strong>
    </h4>

    <!-- Card: Próximo treino -->
    <div class="card mb-4">
        <div class="card-body text-center">
            <i class="bi bi-calendar-plus fs-1 text-primary mb-3"></i>
            <h5 class="card-title">Próximo treino</h5>
            
            <% if (proximoTreino) { %>
                <p class="fs-3 fw-bold mb-2">
                    <%= proximoTreino.nome %>
                </p>
                <p class="text-muted mb-3">
                    <i class="bi bi-calendar"></i>
                    <%= proximoTreino.dia_semana.charAt(0) + proximoTreino.dia_semana.slice(1).toLowerCase() %>
                </p>
                <a href="/usuario/treino/<%= proximoTreino.id_treino %>/exercicios" 
                   class="btn btn-primary">
                    <i class="bi bi-play-circle"></i> Começar treino
                </a>
            <% } else { %>
                <p class="fs-4 text-muted mb-3">Nenhum treino agendado</p>
                <a href="/usuario/opcoes/treino/personalizado" 
                   class="btn btn-outline-primary">
                    <i class="bi bi-plus-circle"></i> Criar primeiro treino
                </a>
            <% } %>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Card: Treinos na semana -->
        <div class="col-12">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-bar-chart fs-2 text-success"></i>
                    <h6 class="mt-2">Treinos na semana</h6>
                    <p class="fs-4 fw-bold mb-0"><%= treinosSemana %></p>
                    <small class="text-muted">últimos 7 dias</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Card: Atalhos rápidos -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Atalhos rápidos</h5>

            <div class="d-grid gap-2">
                <a href="/usuario/meus-treinos" class="btn btn-outline-primary">
                    <i class="bi bi-barbell"></i> Meus Treinos
                </a>

                <a href="/usuario/estatisticas" class="btn btn-outline-secondary">
                    <i class="bi bi-graph-up"></i> Ver Estatísticas
                </a>

                <a href="/usuario/conta" class="btn btn-outline-dark">
                    <i class="bi bi-person"></i> Minha Conta
                </a>
            </div>
        </div>
    </div>

</div>

<nav class="bottom-nav py-2">
    <div class="container">
        <div class="row text-center">

            <div class="col">
                <a href="/usuario/inicio" class="active">
                    <i class="bi bi-house icon-big"></i><br>
                    Início
                </a>
            </div>

            <div class="col">
                <a href="/usuario/opcoes">
                    <i class="bi bi-grid-3x3-gap icon-big"></i><br>
                    Opções
                </a>
            </div>

            <div class="col">
                <a href="/usuario/estatisticas">
                    <i class="bi bi-arrow-up-right icon-big"></i><br>
                    Estatísticas
                </a>
            </div>

            <div class="col">
                <a href="/usuario/conta">
                    <i class="bi bi-person icon-big"></i><br>
                    Conta
                </a>
            </div>

        </div>
    </div>
</nav>

</body>
</html>
