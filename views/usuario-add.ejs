<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastro</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="bg-light">

<div class="container mt-5 mb-5">
    <div class="card shadow">

        <% if (typeof erro !== 'undefined') { %>
        <div class="alert alert-danger text-center">
            <%= erro %>
        </div>
        <% } %>

        <div class="card-header bg-vermelho text-white">
            <h4 class="m-0">Cadastro de Usuário</h4>
        </div>

        <div class="card-body">
            <form action="/usuario/cadastro" method="POST" onsubmit="return validarSenha()">

                <h5 class="mt-3">Dados Pessoais</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nome completo</label>
                        <input type="text" name="nome" class="form-control" required>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Data de nascimento</label>
                        <input type="date" name="data_nascimento" class="form-control" required>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Sexo</label>
                        <select name="sexo" class="form-select" required>
                            <option value="">Selecione</option>
                            <option value="1">Feminino</option>
                            <option value="2">Masculino</option>
                            <option value="3">Outro</option>
                        </select>
                    </div>
                </div>

                <h5 class="mt-4">Conta de Acesso</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">E-mail</label>
                        <input type="email" name="email" class="form-control" required>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nome de usuário</label>
                        <input type="text" name="user_name" class="form-control" required>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Senha</label>
                        <div class="input-group">
                            <input type="password" id="senha" name="senha" class="form-control" required>
                            <button class="btn btn-outline-secondary" type="button" onclick="toggleSenha('senha', this)">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Confirme a senha</label>
                        <div class="input-group">
                            <input type="password" id="confirmacaoSenha" name="confirmacaoSenha" class="form-control" required>
                            <button class="btn btn-outline-secondary" type="button" onclick="toggleSenha('confirmacaoSenha', this)">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tipo de usuário</label>
                    <select id="tipoUsuario" name="tipo" class="form-select" required>
                        <option value="">Selecione...</option>
                        <option value="1">Aluno</option>
                        <option value="2">Instrutor</option>
                    </select>
                </div>

                <div id="camposAluno" class="border rounded p-3 bg-white" style="display:none;">
                    <h5>Dados de Aluno</h5>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Peso (kg)</label>
                            <input type="number" step="0.1" name="peso_atual" class="form-control">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Altura (cm)</label>
                            <input type="number" name="altura" class="form-control">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Objetivo</label>
                            <input type="text" name="objetivo" class="form-control">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="form-label">Restrições</label>
                            <input type="text" name="restricoes" class="form-control">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Instrutor responsável</label>
                            <select name="id_instrutor" class="form-select">
                                <option value="">Nenhum</option>
                                <% if (instrutores) { instrutores.forEach(i => { %>
                                    <option value="<%= i.id_instrutor %>"><%= i.nome %></option>
                                <% }) } %>
                            </select>
                        </div>
                    </div>
                </div>

                <div id="camposInstrutor" class="border rounded p-3 bg-white" style="display:none;">
                    <h5>Dados de Instrutor</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Especialidade</label>
                            <input type="text" name="especialidade" class="form-control">
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Anos de experiência</label>
                            <input type="number" name="experiencia_anos" class="form-control">
                        </div>
                    </div>
                </div>

                <button class="btn btn-gymflow mt-4 w-100">Cadastrar</button>

                <p class="mt-3 text-center">
                    Já possui conta?
                    <a href="http://localhost:3000/usuario/login">Clique aqui para fazer login</a>
                </p>
            </form>
        </div>
    </div>
</div>

<script>
function toggleSenha(id, botao) {
    const campo = document.getElementById(id);
    const icone = botao.querySelector('i');

    if (campo.type === "password") {
        campo.type = "text";
        icone.classList.remove("bi-eye");
        icone.classList.add("bi-eye-slash");
    } else {
        campo.type = "password";
        icone.classList.remove("bi-eye-slash");
        icone.classList.add("bi-eye");
    }
}

function validarSenha() {
    const senha = document.getElementById('senha').value;
    const confirmacao = document.getElementById('confirmacaoSenha').value;

    if (senha !== confirmacao) {
        alert('As senhas não coincidem.');
        return false;
    }
    return true;
}

document.getElementById('tipoUsuario').addEventListener('change', function () {
    document.getElementById('camposAluno').style.display = this.value === "1" ? 'block' : 'none';
    document.getElementById('camposInstrutor').style.display = this.value === "2" ? 'block' : 'none';
});
</script>

</body>
</html>