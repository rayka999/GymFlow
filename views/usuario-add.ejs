<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<div class="container mt-5 mb-5">

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="m-0">Cadastro de Usuário</h4>
        </div>

        <div class="card-body">

            <form action="/cadastro" method="POST">

                <h5 class="mt-3">Dados Pessoais</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nome</label>
                        <input type="text" name="nome" class="form-control" required>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Data de Nascimento</label>
                        <input type="date" name="data_nascimento" class="form-control" required>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Sexo</label>
                        <select name="sexo" class="form-select" required>
                            <option value="">Selecione</option>
                            <option value="F">Feminino</option>
                            <option value="M">Masculino</option>
                            <option value="O">Outro</option>
                        </select>
                    </div>
                </div>

                <h5 class="mt-4">Conta de Acesso</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" required>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Senha</label>
                        <input type="password" name="senha" class="form-control" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tipo de Usuário</label>
                    <select id="tipoUsuario" name="tipo" class="form-select" required>
                        <option value="">Selecione...</option>
                        <option value="0">Aluno</option>
                        <option value="1">Instrutor</option>
                    </select>
                </div>

                <div id="camposAluno" class="border rounded p-3 bg-white" style="display:none;">

                    <h5 class="mt-2">Dados de Aluno</h5>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Peso Atual (kg)</label>
                            <input type="number" step="0.1" name="peso_atual" class="form-control">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Altura (cm)</label>
                            <input type="number" name="altura" class="form-control">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Objetivo</label>
                            <input type="text" name="objetivo" class="form-control">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="form-label">Restrições</label>
                            <input type="text" name="restricoes" class="form-control">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Instrutor Responsável (FK)</label>
                            <select name="id_instrutor" class="form-select">
                                <option value="">Nenhum</option>
                                <% if (instrutores) { instrutores.forEach(i => { %>
                                    <option value="<%= i.id_instrutor %>"><%= i.nome %></option>
                                <% }) } %>
                            </select>
                        </div>
                    </div>

                </div>

                <div id="camposInstrutor" class="border rounded p-3 bg-white" style="display:none;">

                    <h5 class="mt-2">Dados de Instrutor</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Especialidade</label>
                            <input type="text" name="especialidade" class="form-control">
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Anos de Experiência</label>
                            <input type="number" name="experiencia_anos" class="form-control">
                        </div>
                    </div>

                </div>
                <button class="btn btn-primary mt-4 w-100">Cadastrar</button>

                <p class="mt-3 text-center">
                    Já possui conta?
                    <a href="http://localhost:3000/" class="text-primary">Clique aqui para fazer login</a>.
                </p>

            </form>

        </div>

    </div>

</div>

<script>
document.getElementById('tipoUsuario').addEventListener('change', function() {
    const tipo = this.value;

    document.getElementById('camposAluno').style.display = (tipo === "0") ? 'block' : 'none';
    document.getElementById('camposInstrutor').style.display = (tipo === "1") ? 'block' : 'none';
});
</script>

</body>
</html>