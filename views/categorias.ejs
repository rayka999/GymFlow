<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Categorias</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .categoria-card {
      transition: transform .25s ease, box-shadow .25s ease;
      cursor: pointer;
      border-radius: 12px;
    }
    .categoria-card:hover {
      transform: scale(1.03);
      box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
    }
    .categoria-card:active {
      transform: scale(.98);
    }
  </style>
</head>

<body class="bg-light">
  <main class="container" style="margin-top: 90px;">

    <h1 class="text-success fw-bold mb-4">Categorias de Exercícios</h1>
    <div class="row g-4">
      <% categorias.forEach(function(categoria) { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card categoria-card shadow-sm border-0 h-100"
               onclick="window.location.href='/categoria/<%= categoria.id_categoria %>'">

            <div class="card-body d-flex flex-column justify-content-center text-center">
              <h5 class="fw-semibold text-success mb-2"><%= categoria.nome %></h5>
              <small class="text-muted">Clique para ver músculos</small>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>