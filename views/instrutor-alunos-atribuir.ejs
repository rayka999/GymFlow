<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Atribuir Treino</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/aluno.css">
</head>
<body>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Atribuir treino</h1>
        <a href="/instrutor/alunos" class="btn btn-secondary">&larr; Voltar</a>
    </div>

    <form method="post" action="/instrutor/treino/atribuir">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Alunos</h5>

                <div class="mb-2">
                    <input type="checkbox" id="selectAll"> <label for="selectAll">Selecionar tudo</label>
                </div>

                <div class="list-group mb-3">
                    <% if (alunos && alunos.length>0) { %>
                        <% for (a of alunos) { %>
                            <label class="list-group-item d-flex align-items-center">
                                <input type="checkbox" name="alunoIds" value="<%= a.id_aluno %>" class="me-2 aluno-checkbox">
                                <div>
                                    <strong><%= a.nome %></strong>
                                </div>
                            </label>
                        <% } %>
                    <% } else { %>
                        <div class="text-muted">Nenhum aluno encontrado.</div>
                    <% } %>
                </div>

                <h5 class="card-title">Treino a ser atribuído</h5>
                <div class="mb-3">
                    <select class="form-select" name="id_treino" required>
                        <% if (treinos && treinos.length>0) { %>
                            <% for (t of treinos) { %>
                                <option value="<%= t.id_treino %>"><%= t.nome %></option>
                            <% } %>
                        <% } else { %>
                            <option disabled>Sem treinos disponíveis</option>
                        <% } %>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="dia_semana" class="form-label">Dia da semana</label>
                    <select class="form-select" name="dia_semana" id="dia_semana" required>
                        <option value="SEGUNDA">Segunda</option>
                        <option value="TERCA">Terça</option>
                        <option value="QUARTA">Quarta</option>
                        <option value="QUINTA">Quinta</option>
                        <option value="SEXTA">Sexta</option>
                        <option value="SABADO">Sábado</option>
                        <option value="DOMINGO">Domingo</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="observacoes" class="form-label">Observações (opcional)</label>
                    <textarea class="form-control" name="observacoes" id="observacoes" rows="3"></textarea>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="/instrutor/alunos" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Atribuir treino</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    
    document.getElementById('selectAll').addEventListener('change', function(){
        const checked = this.checked;
        document.querySelectorAll('.aluno-checkbox').forEach(cb => cb.checked = checked);
    });

</script>
</body>
</html>