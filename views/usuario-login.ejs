<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    
</head>

<body class="bg-light">

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow-sm">

                <div class="card-header bg-vermelho text-center text-white">
                    <h3 class="mb-0">Login</h3>
                </div>

                <div class="card-body">
                    
                    <% if (typeof erro !== 'undefined') { %>
                        <div class="alert alert-danger text-center">
                            <%= erro %>
                        </div>
                    <% } %>

                    <form action="/login" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Entrar como:</label>
                            <select name="typeUser" id="typeUser" class="form-select">
                                <option value="1">Aluno(a)</option>
                                <option value="2">Instrutor(a)</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <input type="text" name="email" class="form-control" required placeholder="Nome de usuário ou e-mail">
                        </div>

                        <div class="mb-3">
                            <input type="password" name="senha" class="form-control" required placeholder="Senha">
                        </div>

                        <button class="btn btn-gymflow w-100 mt-3" type="submit">Entrar</button>

                    </form>

                </div>

                <p class="mt-3 text-center">
                    Não tem conta? 
                    <a href="http://localhost:3000/cadastro">Crie uma conta</a>
                </p>
            </div>
        </div>
    </div>

</div>
</body>
</html>